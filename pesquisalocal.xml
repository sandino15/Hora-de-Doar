<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".pesquisalocaldoacao">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/stroke"
        android:backgroundTint="#DF0404">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/setavoltar"
            android:background="@drawable/stroke"
            android:backgroundTint="@color/white"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/cooracao"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="300dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Hora de Doar"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            tools:ignore="HardcodedText,SpUsage" />


    </RelativeLayout>


    <EditText

        android:layout_width="395dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:hint="Pesquisar"
        tools:ignore="Autofill,HardcodedText,TextFields,TouchTargetSizeCheck,TextContrastCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="405dp"
            android:layout_height="580dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/stroke"
            android:backgroundTint="@color/white"
            />



    </RelativeLayout>


</LinearLayout>