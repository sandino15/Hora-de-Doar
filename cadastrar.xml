<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4A8A8"
    tools:context=".cadastrar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hora de Doar"
        android:textColor="@color/white"
        android:textSize="39dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextContrastCheck" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginEnd="1dp"
        android:padding="1dp"
        android:src="@drawable/cooracao"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints" />

    <EditText
        android:id="@+id/cadnomecompleto"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Nome Completo"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/caddatnascimento"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Data Nascimneto"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cadtelefone"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Telefone"
        android:textSize="20dp"
        tools:ignore="Autofill,LabelFor,MissingConstraints,SpUsage,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tiposanguineo"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Tipo Sanguineo"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cadendereço"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text= "Endereço"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/casdastraemail"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="email"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/confimaremail"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Confirmar Endereço"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextFields,TextSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/primesenha"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Senha"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/confirmasenha"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:minHeight="48dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="Confirmar senha"
        tools:ignore="Autofill,LabelFor,MissingConstraints,TextSizeCheck,TouchTargetSizeCheck" />


    <RadioButton
        android:id="@+id/notificacao"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:minLines="1"
        android:text="Receber Notifica o Email"
        android:textColor="#000000"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,DuplicateClickableBoundsCheck,TextContrastCheck" />

    <RadioButton

        android:id="@+id/politica"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:minLines="1"
        android:text="Eu concordo com a politica de privacidade"
        tools:ignore="MissingConstraints,TextSizeCheck,TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#E3402A"
        android:minHeight="30dp"
        android:text="Cadastrar"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,VisualLintButtonSize"  />




</LinearLayout>